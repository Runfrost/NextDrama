<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NextDrama.ViewModels"
             x:Class="NextDrama.Views.ShowsPage">

    <!-- Koppla ViewModel till denna sida -->
    <ContentPage.BindingContext>
        <local:ShowsViewModel/>
    </ContentPage.BindingContext>

    <!-- LÃ¤gg till en ScrollView fÃ¶r att gÃ¶ra sidan skrollbar -->
    <ScrollView>
        <AbsoluteLayout>

            <!-- Dropdown Explore (Ã–VER bilden) -->
            <StackLayout x:Name="ExploreDropdownLayout" IsVisible="False"
                         BackgroundColor="White"
                         Padding="10"
                         WidthRequest="150"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         AbsoluteLayout.LayoutBounds="0.33, 0.10, 150, 100"
                         ZIndex="10">
                <Label Text="Popular" TextColor="Black" Margin="5"/>
                <Label Text="New Releases" TextColor="Black" Margin="5"/>
                <Label Text="Top Rated" TextColor="Black" Margin="5"/>
            </StackLayout>

            <!-- Dropdown Community (Ã–VER bilden) -->
            <StackLayout x:Name="CommunityDropdownLayout" IsVisible="False"
                         BackgroundColor="White"
                         Padding="10"
                         WidthRequest="150"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         AbsoluteLayout.LayoutBounds="0.45, 0.10, 150, 100"
                         ZIndex="10">
                <Label Text="Forums" TextColor="Black" Margin="5"/>
                <Label Text="Groups" TextColor="Black" Margin="5"/>
                <Label Text="Events" TextColor="Black" Margin="5"/>
            </StackLayout>

            <!-- Grid fÃ¶r navigeringsmenyn -->
            <Grid BackgroundColor="#695060" HeightRequest="60"
                  AbsoluteLayout.LayoutBounds="0,0,1,60"
                  AbsoluteLayout.LayoutFlags="WidthProportional">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- NextDrama Titel -->
                <Label Grid.Column="0"
                       Text="NextDrama"
                       FontSize="40"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"
                       Margin="20,0,0,0"
                       FontFamily="OpenSansSemibold">
                    <Label.Shadow>
                        <Shadow Brush="Black" Offset="3,3" Opacity="0.6"/>
                    </Label.Shadow>
                </Label>

                <!-- Home -->
                <Label Grid.Column="1"
                       Text="Home"
                       FontSize="15"
                       TextColor="White"
                       VerticalOptions="Center"
                       Margin="150,0,40,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHomeTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <!-- Explore (Dropdown + Pil bredvid) -->
                <StackLayout Grid.Column="2" Orientation="Horizontal" VerticalOptions="Center" Margin="40,0,40,0">
                    <Label Text="Explore"
                           FontSize="15"
                           TextColor="White"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnExploreTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="â–¼"
                           FontSize="15"
                           TextColor="White"
                           VerticalOptions="Center"
                           Margin="5,0,0,0"/>
                </StackLayout>

                <!-- Calendar -->
                <Label Grid.Column="4"
                       Text="Calendar"
                       FontSize="15"
                       TextColor="White"
                       VerticalOptions="Center"
                       Margin="40,0,20,0">
                    <Label.GestureRecognizers>
                    </Label.GestureRecognizers>
                </Label>

                <!-- SÃ¶kruta bredvid "Calendar" -->
                <Entry Grid.Column="5"
                       Placeholder="Search..."
                       Text="{Binding SearchQuery}"
                       BackgroundColor="#8D7585"
                       TextColor="Black"
                       HeightRequest="30"
                       VerticalOptions="Center"
                       Margin="120,0,20,0"
                       Completed="OnSearchCompleted"/>
                <!-- ðŸ”¹ Triggar metod i C#-filen -->

            </Grid>

            <!-- Bild under navigeringsmenyn -->
            <Image Source="sk.png"
                   Aspect="AspectFill"
                   AbsoluteLayout.LayoutBounds="0.5, 0.11,0.9, 200"
                   AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
                   Margin="0,0,0,0"/>

            <!-- CollectionView fÃ¶r att visa serier -->
            <CollectionView x:Name="ShowsCollectionView"
                            AbsoluteLayout.LayoutBounds="0.5, 0.8, 0.9, 400"
                            AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
                            ItemsSource="{Binding Shows}">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Span="4" Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               BorderColor="White"
                               BackgroundColor="#F3E9F0"
                               CornerRadius="10"
                               HasShadow="False"
                               Margin="10">
                            <StackLayout Padding="5" Spacing="5">

                                <!-- Bild med enbart skugga -->
                                <Image Source="{Binding FullPosterUrl}" 
                                       Aspect="AspectFill" 
                                       WidthRequest="130" 
                                       HeightRequest="180"
                                       HorizontalOptions="Fill"
                                       VerticalOptions="Fill">
                                    <Image.Shadow>
                                        <Shadow Brush="Black" Offset="3,3" Opacity="0.5"/>
                                    </Image.Shadow>
                                </Image>

                                <Label Text="{Binding Name}" 
                                       FontSize="16" 
                                       HorizontalOptions="Center" 
                                       TextColor="#695060" 
                                       FontAttributes="Bold"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2" />
                                <Label Text="{Binding FirstAirDate}" 
                                       FontSize="14" 
                                       HorizontalOptions="Center" 
                                       TextColor="Black" />
                                <Label Text="{Binding OriginCountryString}" 
                                       FontSize="14" 
                                       HorizontalOptions="Center" 
                                       TextColor="Black" />
                                <Label Text="{Binding GenreString}" 
                                       FontSize="14" 
                                       HorizontalOptions="Center" 
                                       TextColor="Black" />

                                <!-- Knapp fÃ¶r att lÃ¤gga till serien i Min Lista -->
                                <Button Text="âž• LÃ¤gg till i min lista"
                                        BackgroundColor="#8D7585"
                                        TextColor="White"
                                        CornerRadius="0"
                                        Padding="5"
                                        Command="{Binding AddToUserListCommand}"
                                        CommandParameter="{Binding}"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </AbsoluteLayout>
    </ScrollView>
</ContentPage>
